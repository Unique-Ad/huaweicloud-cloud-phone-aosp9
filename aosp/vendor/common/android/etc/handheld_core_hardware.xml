<permissions>

    <!-- Screen features -->
    <feature name="android.hardware.touchscreen" />
    <feature name="android.hardware.touchscreen.multitouch" />
    <feature name="android.hardware.touchscreen.multitouch.distinct" />
    <feature name="android.hardware.touchscreen.multitouch.jazzhand" />
    <feature name="android.hardware.screen.portrait" />
    <feature name="android.hardware.screen.landscape" />

    <!-- Support touch emulation for basic events. For instance,
        the device might use a mouse or remote control to drive a cursor,
        and emulate basic touch pointer events like down, up, drag, etc.-->
    <feature name="android.hardware.faketouch" />

    <!-- Audio features -->
    <feature name="android.hardware.audio.output" />
    <feature name="android.hardware.microphone" />

    <!-- Telephony features -->
    <feature name="android.hardware.telephony" />
    <feature name="android.hardware.telephony.cdma" />
    <feature name="android.hardware.telephony.gsm" />

    <!-- Bluetooth features -->
    <feature name="android.hardware.bluetooth" />
    <feature name="android.hardware.bluetooth_le" />

    <!-- Normal ram size-->
    <feature name="android.hardware.ram.normal" />

    <!-- Location features -->
    <feature name="android.hardware.location" />
    <feature name="android.hardware.location.network" />
    <feature name="android.hardware.location.gps" />

    <!-- This is the standard feature indicating that the device supports the
         Android Extension Pack features. -->
    <feature name="android.hardware.opengles.aep" />

    <!-- Standard WiFi features-->
    <feature name="android.hardware.wifi" />
    <feature name="android.hardware.wifi.direct" />
    <feature name="android.hardware.wifi.passpoint" />
    <feature name="android.hardware.ethernet" />

    <!-- Sensors Support List -->
    <feature name="android.hardware.sensor.accelerometer" />
    <feature name="android.hardware.sensor.gyroscope" />
    <feature name="android.hardware.sensor.barometer" />
    <feature name="android.hardware.sensor.compass" />
    <feature name="android.hardware.sensor.light" />
    <feature name="android.hardware.sensor.proximity" />
    <!--<feature name="android.hardware.sensor.stepcounter" />-->
    <!--<feature name="android.hardware.sensor.stepdetector" />-->
    <feature name="android.hardware.sensor.ambient_temperature" />
    <feature name="android.hardware.sensor.relative_humidity" />

    <!-- Camera features-->
    <feature name="android.hardware.camera" />
    <feature name="android.hardware.camera.any" />
    <!--<feature name="android.hardware.camera.autofocus" />-->
    <feature name="android.hardware.camera.flash" />
    <feature name="android.hardware.camera.front" />

    <!-- MultiWindow features: FEATURE_FREEFORM_WINDOW_MANAGEMENT
        and FEATURE_PICTURE_IN_PICTURE -->
    <feature name="android.software.picture_in_picture" />
    <feature name="android.software.freeform_window_management" />

    <!-- Standard software features-->
    <feature name="android.software.activities_on_secondary_displays" />
    <feature name="android.software.app_widgets" />
    <feature name="android.software.autofill" />
    <feature name="android.software.backup" />
    <feature name="android.software.cant_save_state" />
    <feature name="android.software.home_screen" />
    <feature name="android.software.input_methods" />
    <feature name="android.software.webview" />
    <feature name="android.software.device_admin" />

</permissions>

